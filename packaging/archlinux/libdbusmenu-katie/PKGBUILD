# Maintainer: Ivailo Monev <xakepa10@gmail.com>

# https://wiki.archlinux.org/index.php/Arch_package_guidelines

pkgname=libdbusmenu-katie
pkgver=4.23.0.r36.b630e21
pkgrel=1
pkgdesc="Katie implementation of the DBusMenu protocol"
arch=('i486' 'i686' 'pentium4' 'x86_64' 'arm')
url='https://osdn.net/projects/kde/'
license=('LGPL')
groups=('katana')
depends=('katie-git')
makedepends=('cmake' 'git')
source=("git+https://scm.osdn.net/gitroot/kde/libdbusmenu-qt.git")
sha1sums=('SKIP')

pkgver() {
    cd libdbusmenu-qt
    printf "4.23.0."r%s.%s "$(git rev-list --count HEAD)" "$(git rev-parse --short HEAD)"
}

prepare() {
    mkdir -p build
}

build() {
    cd build
    cmake ../libdbusmenu-qt \
        -Wno-dev \
        -DCMAKE_BUILD_TYPE=Release \
        -DCMAKE_INSTALL_PREFIX=/usr
    make
}

package() {
    cd build
    make DESTDIR="${pkgdir}" install
}
