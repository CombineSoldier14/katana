pkgbase=katana-l10n
pkgver=4.17.0.09de702
pkgrel=1
pkgdesc="Katana translations"
arch=('any')
url='http://fluxer.github.io/katana/'
license=('LGPL')
groups=('katana')
makedepends=('cmake' 'git')
source=("git+https://github.com/fluxer/kde-l10n.git")
sha1sums=('SKIP')

